<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light">
    <LinearLayout
            android:id="@+id/energyPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="MQTT Serv. conn. lost at:   "
                android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtLostDateTime"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reconnect Service"
            android:id="@+id/btnReconnect" android:layout_below="@+id/energyPower" android:layout_alignParentStart="true"
            android:layout_marginTop="31dp" android:layout_alignParentEnd="true"
            android:onClick="btnReconnectMQTTServiceOnClick"/>
</RelativeLayout>